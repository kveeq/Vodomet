<Window
    x:Class="Vodomet.View.VodomatListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Vodomet.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="VodomatListWindow"
    Width="800"
    Height="450"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <TabControl Style="{DynamicResource MaterialDesignNavigationRailTabControl}">

            <TabItem
                Width="170"
                Background="{x:Null}"
                Foreground="Black"
                Header="Автоматы">
                <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
                    <Grid Background="#FFE5E5E5">
                        <ListView>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn>
                                        <Button Click="Button_Click" Background="Bisque">Настроки</Button>
                                    </GridViewColumn>
                                    <GridViewColumn>ID</GridViewColumn>
                                    <GridViewColumn>Адрес</GridViewColumn>
                                    <GridViewColumn>Копилка</GridViewColumn>
                                    <GridViewColumn>Всего л.</GridViewColumn>
                                    <GridViewColumn>ПО</GridViewColumn>
                                    <GridViewColumn>Удар</GridViewColumn>
                                    <GridViewColumn>Мало воды</GridViewColumn>
                                    <GridViewColumn>нет воды</GridViewColumn>
                                    <GridViewColumn>бак полон</GridViewColumn>
                                    <GridViewColumn>засор</GridViewColumn>
                                    <GridViewColumn>Тем-ра</GridViewColumn>
                                    <GridViewColumn>нет 220</GridViewColumn>
                                    <GridViewColumn>MDB</GridViewColumn>
                                    <GridViewColumn>ПС</GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </ScrollViewer>
            </TabItem>


            <TabItem Width="170" Header="Ключи">
                <Grid Background="#FFE5E5E5" />
            </TabItem>


            <TabItem Width="170" Header="Инкассаторы">
                <Grid Background="#FF795959" />
            </TabItem>


            <TabItem Width="170" Header="История ключей">
                <Grid Background="#FFE5E5E5" />
            </TabItem>


            <TabItem Width="170" Header="История инкассаций">
                <Grid Background="#FFE5E5E5" />
            </TabItem>


            <TabItem Width="170" Header="История бонусов">
                <Grid Background="#FFE5E5E5" />
            </TabItem>


            <TabItem Width="170" Header="Отчеты">
                <Grid Background="#FFE5E5E5" />
            </TabItem>


            <TabItem Width="170" Header="Пользователи">
                <Grid Background="#FFE5E5E5" />
            </TabItem>


            <TabItem Width="170" Header="Реквизиты">
                <Grid Background="#FFE5E5E5" />
            </TabItem>


            <TabItem Width="170" Header="Маркетинг">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
